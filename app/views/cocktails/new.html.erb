<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "banner_unsplash.jpg" %>')";>
  <div class="container text-center">
    <h1>Cocktails </h1>
    <p>Create your own cocktails</p>
    <a class="btn btn-primary" <%= link_to "Add a new cocktail", new_cocktail_path %></a>
  </div>
</div>
<div class="cocktail-show">
  <h2 class="text-center">Add a new cocktail</h2>
  <div class="container">
    <%= simple_form_for (@cocktail) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
