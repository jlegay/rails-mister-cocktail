<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "banner_unsplash.jpg" %>')";>
  <div class="container text-center">
    <h1>Cocktails </h1>
    <p>Create your own cocktails</p>
    <a class="btn btn-primary" <%= link_to "Add a new cocktail", new_cocktail_path %></a>
  </div>
</div>

<div class="container">
  <div class="cards-container">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached?  %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key %>')">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/1600x900/?cocktail')">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>



