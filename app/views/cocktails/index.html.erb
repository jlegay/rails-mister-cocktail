<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "banner_unsplash.jpg" %>')";>
  <div class="container text-center">
    <h1>Cocktails </h1>
    <p>Create your own cocktails</p>
    <a class="btn btn-primary" <%= link_to "Add a new cocktail", new_cocktail_path %></a>
  </div>
</div>
<%= cl_image_tag("https://res.cloudinary.com/dnj5yomey/image/upload/v1589548223/oe6xteejhkiogeagz6si.jpg",
      width: 400, height: 300, crop: :fill) %>

<div class="container">
  <div class="cards-container">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&au)">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
    <% end %>
  </div>
</div>



