<h1><%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.photo.key, crop: :fill %>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> : <%= dose.ingredient[:name] %></li>
    <%= link_to "Delete ingredient", dose_path(dose), method: :delete %>
  <% end %>
</ul>
<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
